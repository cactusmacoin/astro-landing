---
import projects from "../../data/projects.json";
---
<h2 class="text-center font-bold text-5xl gap-8 p-4">Projects</h2>

    {projects.map((project)=>(
        <div class="flex flex-col mb-2 gap-4 p-4 text-center md:text-left md:flex-row">
        <div class="flex-1 p-4">
            <h2 class="text-2xl font-bold my-4 text-indigo-400">{project.title}</h2>
            <p>{project.description}</p>   
            <button class="bg-indigo-500 rounded-xl text-bold text-xl m-10 px-10 py-1 hover:bg-indigo-400">More Info</button> 
        </div>
        <div class="flex-1">
            <img class="w-72 m-auto" src={project.image} alt="">
            
        </div>
    </div>
    ))}

